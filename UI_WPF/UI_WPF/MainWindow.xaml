<Window x:Class="UI_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="White"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <materialDesign:ColorZone
                Mode="PrimaryDark"
                materialDesign:ShadowAssist.ShadowDepth="Depth3">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Right" Background="Transparent" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="2 4 2 4"></Setter>
                                <Setter Property="Width" Value="40"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <Button x:Name="Minimize" 
                                ToolTip="Thu nhỏ" 
                                ToolBar.OverflowMode="AsNeeded"
                                Background="ForestGreen"
                                Click="Minimize_Click">
                            <materialDesign:PackIcon Kind="WindowMinimize"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="Maximize" 
                                ToolTip="Phóng to"
                                ToolBar.OverflowMode="AsNeeded" 
                                Background="ForestGreen" 
                                Click="Maximize_Click">
                            <materialDesign:PackIcon x:Name="mn" Kind="WindowMaximize"></materialDesign:PackIcon>
                        </Button>
                        <Button x:Name="Close" 
                                ToolTip="Đóng"
                                ToolBar.OverflowMode="AsNeeded"
                                Background="OrangeRed"
                                Click="Close_Click">
                            <materialDesign:PackIcon Kind="WindowClose"></materialDesign:PackIcon>
                        </Button>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Button
                            Name="logout"
                            VerticalAlignment="Center"
                            FontSize="17"
                            Width="108"
                            Height="30">
                            Logout
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  Background="#FF512DA8"
                  Width="108">
                <Button x:Name="BNT_KV1"
                        Margin="0 20"
                        Height="30"
                        Width="110"
                        VerticalAlignment="Top"
                        Background="White"
                        BorderBrush="White"
                        Foreground="Black">
                    KHU VỰC 1
                </Button>
                <Button x:Name="BNT_KV2"
                        Margin="0 60"
                        Height="30"
                        Width="110"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White">
                    KHU VỰC 2
                </Button>
                <Button x:Name="BNT_KV3"
                        Margin="0 100"
                        Height="30"
                        Width="110"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White">
                    KHU VỰC 3
                </Button>

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock
                            Margin="20 5"
                            FontSize="23"
                            Foreground="#FF838223"
                            FontWeight="Bold">
                            GIÁM SÁT ĐIỀU KHIỂN
                        </TextBlock>
                    </Grid>

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal">
                        <materialDesign:Card
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="20 10 10 10"
                            Background="#03a9f4"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            Padding="0"
                            Width="200"
                            Height="95">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="78"></RowDefinition>
                                    <RowDefinition Height="17"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock
                                        x:Name="tb_ND"
                                        Margin="16 10 16 0"
                                        FontWeight="Bold"
                                        FontSize="45">
                                        25°C
                                    </TextBlock>
                                    <Image
                                        Margin="0 5 10 0"
                                        Height="50"
                                        Width="50"
                                        HorizontalAlignment="Right" 
                                        Source="/hot.png">
                                    </Image>
                                </Grid>

                                <Grid Grid.Row="1"
                                      Background="#FF5242F1">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="13">
                                        NHIỆT ĐỘ
                                    </TextBlock>
                                </Grid>

                            </Grid>

                        </materialDesign:Card>
                        <materialDesign:Card
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10"
                            Background="#FFEEC025"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            Padding="0"
                            Width="200"
                            Height="95">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="78"></RowDefinition>
                                    <RowDefinition Height="17"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock
                                        x:Name="tb_DM"
                                        Margin="16 10 16 0"
                                        FontWeight="Bold"
                                        FontSize="45">
                                        85%
                                    </TextBlock>
                                    <Image
                                        Margin="0 5 10 0"
                                        Height="50"
                                        Width="50"
                                        HorizontalAlignment="Right" 
                                        Source="/humidity.png">
                                    </Image>
                                </Grid>

                                <Grid Grid.Row="1"
                                      Background="#FFEEA43A">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="13">
                                        ĐỘ ẨM
                                    </TextBlock>
                                </Grid>

                            </Grid>

                        </materialDesign:Card>
                        <materialDesign:Card
                            HorizontalAlignment="Left"
                            Margin="10"
                            Background="White"
                            Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                            Width="95"
                            Height="95">
                            <Image x:Name="den"
                                   Width="85"
                                   Height="85" Source="/lamp.png">

                            </Image>

                        </materialDesign:Card>


                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <materialDesign:Card Grid.Column="0"
                                         Margin="20 0 10 20"
                                         Background="White"
                                         Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                    </materialDesign:Card>
                    <Grid Grid.Column="0"
                          Margin="20 0 10 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Margin="10 5 0 0"
                                   FontSize="23"
                                   FontWeight="Bold"
                                   Foreground="#FF838223">
                            BIỂU ĐỒ NHIỆT ĐỘ
                        </TextBlock>

                        <lvc:CartesianChart Grid.Row="1"
                                            Name="chart1">
                        </lvc:CartesianChart>
                    </Grid>

                    <materialDesign:Card Grid.Column="1"
                                         Margin="20 0 10 20"
                                         Background="White"
                                         Foreground="{DynamicResource PrimaryHueLightForegroundBrush}">
                    </materialDesign:Card>
                    <Grid Grid.Column="1"
                          Margin="20 0 10 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Margin="10 5 0 0"
                                   FontSize="23"
                                   FontWeight="Bold"
                                   Foreground="#FF838223">
                            BIỂU ĐỒ ĐỘ ẨM
                        </TextBlock>

                        <lvc:CartesianChart Name="chart2"
                            Grid.Row="1">
                        </lvc:CartesianChart>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
